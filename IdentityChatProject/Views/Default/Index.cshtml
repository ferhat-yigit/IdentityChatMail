@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MessageLayout.cshtml";
}

<div class="row">
    <div class="col-3">
        <div class="card">
            <div class="card-body">
                <div class="text-center">
                    <span class="display-5"><i class="icon-envelope gradient-3-text"></i></span>
                    <h2 class="mt-3">Gelen Mesaj</h2>
                    <a href="javascript:void()" class="btn gradient-3 btn-lg border-0 btn-rounded px-5">
                        @ViewBag.v1
                    </a>
                </div>
            </div>
        </div>
    </div>
    <div class="col-3">
        <div class="card">
            <div class="card-body">
                <div class="text-center">
                    <span class="display-5"><i class="icon-paper-plane gradient-4-text"></i></span>
                    <h2 class="mt-3">Gönderilen Mesaj</h2>
                    <a href="javascript:void()" class="btn gradient-4 btn-lg border-0 btn-rounded px-5">
                        @ViewBag.v4
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-3">
        <div class="card">
            <div class="card-body">
                <div class="text-center">
                    <span class="display-5"><i class="icon-envelope-open gradient-4-text"></i></span>
                    <h2 class="mt-3">Okunan Mesaj</h2>
                    <a href="javascript:void()" class="btn gradient-4 btn-lg border-0 btn-rounded px-5">
                        @ViewBag.v3
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-3">
        <div class="card">
            <div class="card-body">
                <div class="text-center">
                    <span class="display-5"><i class="icon-share gradient-9-text"></i></span>
                    <h2 class="mt-3">Okunmamış Mesaj</h2>
                    <a href="javascript:void()" class="btn gradient-9 btn-lg border-0 btn-rounded px-5">
                        @ViewBag.v2
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
